<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddWilayah"
    android:padding="20dp">

    <TextView
        android:textColor="#000"
        android:text="Jenis Wilayah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:spinnerMode="dropdown"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerJenisWilayah"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_Provinsi"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:text="Provinsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@id/tv_Provinsi"
        android:layout_marginTop="10dp"
        android:hint="masukkan nama provinsi"
        android:id="@+id/edNama_Provinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
    android:textColor="#000"
    android:layout_marginTop="30dp"
    android:text="Kabupaten/Kota"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:hint="masukkan nama kab/kot"
        android:id="@+id/edNama_Kabkot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvJlh"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:text="Jumlah Penduduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <EditText
            android:layout_below="@id/tvJlh"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:hint="0"
            android:id="@+id/edjumlah_Penduduk"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tvKode"
            android:textColor="#000"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            android:text="Kode Wilayah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="2"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvJlh"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:hint="0"
            android:id="@+id/edKodeWilayah"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:onClick="addWilayah"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="Tambahkan"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>