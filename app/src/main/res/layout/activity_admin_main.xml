<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminMain">

    <RelativeLayout
        android:id="@+id/container_top"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/color_red_gradient">

        <ImageView
            android:id="@+id/iv_garuda"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="iconGaruda"
            android:src="@drawable/ic_garuda" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_garuda"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="PILKADA INDONESIA 2020"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:text="#noGolput#PILKADABersih"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_paslon"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@id/container_top"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="20dp"
        android:onClick="goToPaslon"
        android:scaleType="fitXY"
        android:src="@drawable/paslon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_paslon"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:text="PASLON"
        android:textColor="#000"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/iv_pemilihan"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_below="@id/container_top"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-120dp"
        android:onClick="goToPemilihan"
        android:src="@drawable/unnamed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pemilihan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="33dp"
        android:text="PEMILIHAN"
        android:textAlignment="center"
        android:textColor="#000"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/iv_pemilih"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_below="@id/container_top"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-30dp"
        android:layout_toRightOf="@id/iv_wilayah"
        android:onClick="goToPemilih"
        android:src="@drawable/icon_peserta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pemilih"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="33dp"
        android:layout_toRightOf="@id/tv_Wilayah"
        android:onClick="goToPemilih"
        android:text="PEMILIH"
        android:textAlignment="center"
        android:textColor="#000"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/iv_wilayah"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_below="@id/iv_paslon"
        android:layout_marginTop="-10dp"
        android:onClick="goToWilayah"
        android:padding="10dp"
        android:src="@drawable/wilayah" />

    <TextView
        android:id="@+id/tv_Wilayah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_wilayah"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-40dp"
        android:text="WILAYAH"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/iv_jadwal"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_below="@id/iv_pemilihan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:onClick="goToJadwal"
        android:src="@drawable/calendar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_jadwal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="40dp"
        android:text="JADWAL"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />

</RelativeLayout>