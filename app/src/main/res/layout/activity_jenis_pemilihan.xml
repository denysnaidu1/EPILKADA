<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JenisPemilihan">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Pilih Jenis Pemilihan"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_pilgub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="#AFAEAE"
        android:enabled="false"
        android:onClick="goPilGub"
        android:text="Pemilihan Gubernur"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_pilbup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="#AFAEAE"
        android:enabled="false"
        android:onClick="goPilBup"
        android:text="Pemilihan Bupati/Wali Kota"
        android:textColor="#fff" />

</LinearLayout>