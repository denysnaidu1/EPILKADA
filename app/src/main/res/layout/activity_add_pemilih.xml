<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:scrollbars="none"
    tools:context=".AddPemilih">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="masukkan NIK"
            android:text="NIK:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="masukkan nik"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="masukkan nama"
            android:text="Nama:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="masukkan nama" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvJK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin:"
                android:textColor="#000" />

            <Spinner
                android:id="@+id/spinnerJK"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvJK"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tvGoldar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:text="Gol. Darah:"
                android:textColor="#000" />

            <Spinner
                android:id="@+id/spinnerGoldar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGoldar"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tempat Lahir:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edTempatLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="masukkan tempat lahir" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tanggal Lahir:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:focusableInTouchMode="false"
            android:hint="Hari/Bulan/Tahun"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Alamat:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/edAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="alamat sesuai e-ktp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvRTRW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RT/RW:                 "
                android:textColor="#000" />

            <EditText
                android:id="@+id/ed_rtrw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tvRTRW"
                android:hint="nama rt/rw" />

            <TextView
                android:id="@+id/tvKelDesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRTRW"
                android:layout_marginTop="40dp"
                android:text="Kelurahan/Desa:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/ed_keldes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_rtrw"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tvKelDesa"
                android:hint="nama kelurahan/desa" />

            <TextView
                android:id="@+id/tv_kecamatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvKelDesa"
                android:layout_marginTop="30dp"
                android:text="Kecamatan:        "
                android:textColor="#000" />

            <EditText
                android:id="@+id/ed_kecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_keldes"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_kecamatan"
                android:hint="nama kecamatan" />

            <TextView
                android:id="@+id/tv_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kecamatan"
                android:layout_marginTop="30dp"
                android:text="Kota:                    "
                android:textColor="#000" />

            <EditText
                android:id="@+id/ed_kota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_kecamatan"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_kota"
                android:hint="nama kota" />

            <TextView
                android:id="@+id/tv_provinsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kota"
                android:layout_marginTop="30dp"
                android:text="Provinsi:              "
                android:textColor="#000" />

            <EditText
                android:id="@+id/ed_provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_kota"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_provinsi"
                android:hint="nama provinsi" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Agama:"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/spinnerAgama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Status Perkawinan"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/spinnerKawin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pekerjaan"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/spinnerPekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Kewarganegaraan:"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/spinnerNegara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvUnggah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_image"
                android:text="Unggah Foto (min. 10)"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHitungFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUnggah"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_image"
                android:text="Dipilih: 0 Foto"
                android:textColor="#2196F3" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle"
                android:src="@drawable/ic_add_image" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnTambahkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:text="Tambahkan"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>
